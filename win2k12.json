{
  "builders": [
    {
      "type": "null",
      "communicator": "none"
    },
    {
      "vm_name": "vagrant-w2012",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "4096" ],
        [ "modifyvm", "{{.Name}}", "--vram", "48" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ],
      "guest_additions_mode": "disable",
      "guest_os_type": "Windows2012_64",
      "headless": true,
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "output_directory": "output-win2k12-virtualbox-iso",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "1h",
      "post_shutdown_delay": "5m",
      "floppy_files": [
        "./tmp/Autounattend.xml",
        "./scripts/disable-screensaver.ps1",
        "./scripts/disable-winrm.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1",
        "./scripts/oracle-cert.cer"
      ]
    },
    {
      "type": "virtualbox-ovf",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "4096" ],
        [ "modifyvm", "{{.Name}}", "--vram", "48" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ],
      "vm_name": "vagrant-w2012",
      "source_path": "./output-win2k12-virtualbox-iso/vagrant-w2012.ovf",
      "headless": true,
      "output_directory": "output-win2k12-virtualbox-ovf",
      "guest_additions_mode": "{{ user `guest_additions_mode` }}",
      "boot_wait": "30s",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "1h"
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "powershell -NoProfile -ExecutionPolicy unrestricted -File ./scripts/product-key.ps1 {{ user `autounattend` }} {{ user `product_key` }}",
      "only": ["null"],
      "only_on": "windows"
    },
    {
      "type": "powershell",
      "scripts": [
        "./scripts/strong-crypto.ps1"
      ],
      "only": ["virtualbox-ovf"]
    },
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "./scripts/vm-guest-tools.bat",
        "./scripts/enable-rdp.bat",
        "./scripts/chocolatey.bat",
        "./scripts/chocopacks.bat"
      ],
      "only": ["virtualbox-ovf"]
    },
    {
      "type": "powershell",
      "scripts": [
        "./scripts/debloat-windows.ps1"
      ],
      "only": ["virtualbox-ovf"]
    },
    {
      "type": "windows-restart",
      "only": ["virtualbox-ovf"]
    },
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "./scripts/set-winrm-automatic.bat",
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/uac-enable.bat",
        "./scripts/compact.bat"
      ],
      "only": ["virtualbox-ovf"]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "Win2k12-{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile-windows_2012.template",
      "only": ["virtualbox-ovf"]
    }
  ],
  "variables": {
    "iso_url": "./iso/en_windows_server_2012_r2_with_update_x64_dvd_6052708.iso",
    "iso_checksum_type": "sha1",
    "iso_checksum": "865494E969704BE1C4496D8614314361D025775E",
    "autounattend": "./answer_files/2012/Autounattend.xml",
    "guest_additions_mode": "upload",
    "product_key": "{{ user `win2012_key` }}"
  }
}